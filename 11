<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Simple Tree</title>

<style>
  body { font-family: Arial, sans-serif; font-size: 14px; }

  ul.tree, ul.tree ul {
    list-style: none;
    margin: 0;
    padding-left: 18px;
    position: relative;
  }

  /* vertical dotted line */
  ul.tree ul::before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 8px;
    border-left: 1px dotted #999;
  }

  li {
    position: relative;
    line-height: 22px;
  }

  /* horizontal connector */
  li::before {
    content: "";
    position: absolute;
    top: 11px;
    left: -10px;
    width: 10px;
    border-top: 1px dotted #999;
  }

  /* root cleanup */
  ul.tree > li::before {
    display: none;
  }
  ul.tree > ul::before {
    display: none;
  }

  /* toggle triangles */
  .toggle {
    cursor: pointer;
    display: inline-block;
    width: 14px;
    user-select: none;
  }
  .closed > .toggle::before { content: "▶"; }
  .open > .toggle::before { content: "▼"; }

  .closed > ul { display: none; }
</style>
</head>

<body>

<h3>Tree</h3>

<ul class="tree">
  <li class="open">
    <span class="toggle"></span> Root
    <ul>
      <li>Item 1</li>
      <li class="closed">
        <span class="toggle"></span> Folder A
        <ul>
          <li>Item 2</li>
          <li>Item 3</li>
        </ul>
      </li>
    </ul>
  </li>
</ul>

<script>
  document.onclick = e => {
    if (!e.target.classList.contains("toggle")) return;
    e.target.parentElement.classList.toggle("open");
    e.target.parentElement.classList.toggle("closed");
  };
</script>

</body>
</html>
